<!-- 投稿一覧 -->

<body>

<div class="flash">
    <%= flash.now[:notice] %>
</div>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th> </th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td class="button"><%= link_to "Show", book_path(book.id) %></td>
      <td class="button"><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td class="button"><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<!-- 新規投稿 -->
<h1>New Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:

  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url:'/books' do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title%>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <p><%= f.submit 'Create Book' %></p>
<% end %>

</body>